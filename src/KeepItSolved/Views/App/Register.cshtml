@model KeepItSolved.ViewModels.RegisterViewModel
@{
	ViewBag.Title = "Register";
}

@section Scripts{
	<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
	<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

<div class="container-fluid">
	<div class="col-md-6 col-md-offset-2 text-center">

		<form method="post" class="form-horizontal" novalidate asp-controller="App" asp-action="Register">
			<div class="col-sm-8 col-sm-offset-4 bold" asp-validation-summary="ValidationSummary.ModelOnly"></div>
			<div class="form-group">
				<label asp-for="Login" class="col-sm-4">Username:</label>
				<div class="col-sm-8">
					<input asp-for="Login" class="form-control" />
					<b><span asp-validation-for="Login" style="font-size: 15px;"></span></b>
				</div>
			</div>

			<div class="form-group">
				<label asp-for="Email" class="col-sm-4">E-mail:</label>
				<div class="col-sm-8">
					<input asp-for="Email" type="email" class="form-control" />
					<b><span asp-validation-for="Email" style="font-size: 15px;"></span></b>
				</div>
			</div>

			<div class="form-group">
				<label asp-for="Password" class="col-sm-4">Password:</label>
				<div class="col-sm-8">
					<input asp-for="Password" type="password" class="form-control" />
					<b><span asp-validation-for="Password" style="font-size: 15px;"></span></b>
				</div>
			</div>

			<div class="form-group">
				<div class="col-md-8 col-md-offset-4 col-sm-12" id="regBtns">
					<input type="submit" class="btn btn-success btn-lg" value="Register" />
					<a asp-controller="App" asp-action="Index" class="btn btn-default btn-sm" style="width: 100%;">Back</a>
				</div>
			</div>
		</form>
	</div>
</div>